{
  "name": "tutorial",
  "scripts": {
    "postdeploy": "bundle exec rake db:schema:load db:seed db:migrate"
  },
  "env": {
    "CLEARDB_DATABASE_URL": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "TUTORIAL_DATABASE_PASSWORD": {
      "required": true
    },
    "TUTORIAL_DATABASE_PORT": {
      "required": true
    },
    "TUTORIAL_DATABASE_USER": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "cleardb"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
